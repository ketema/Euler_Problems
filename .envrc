#!/usr/bin/env bash
# Main .envrc for Euler_Problems project
# This file is loaded when entering the project root directory

# Worktree prefix for agent coordination (cross-project skill compatibility)
export AGENT_WORKTREE_PREFIX="euler"

# Project root for absolute path references
export EULER_PROJECT_ROOT="$(pwd)"

# Shared memory for MCP server (global across all projects)
export MEMORY_FILE_PATH="$HOME/.config/claude-code/shared-memory.json"

# Haskell Stack configuration (global for main worktree)
export STACK_WORK=".stack-work"
